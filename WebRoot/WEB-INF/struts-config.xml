<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="loginForm" type="cn.com.crowdsourcedtesting.struts.form.LoginForm" />
    <form-bean name="giftForm" type="cn.com.crowdsourcedtesting.struts.form.GiftForm" />
  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
    <action
      attribute="loginForm"
      parameter = "method"
      input="/LoginView.jsp"
      name="loginForm"
      path="/security"
      scope="request"
      type="cn.com.crowdsourcedtesting.controller.SecurityRouter">
      <set-property property="cancellable" value="true" />
      
      <forward name="login" path="LoginView.jsp"></forward>
    </action>
    <action
      attribute="giftForm"
      parameter = "method"
      input="/gifts.jsp"
      name="giftForm"
      path="/gifts"
      scope="request"
      type="cn.com.crowdsourcedtesting.struts.action.GiftAction">
      <set-property property="cancellable" value="true" />
      
      <forward name="allgifts" path="/gifts.jsp"></forward>
      <forward name="giftitem" path="/gift.jsp"></forward>
    </action>

  </action-mappings>

  <message-resources parameter="cn.com.crowdsourcedtesting.struts.ApplicationResources" />
</struts-config>

